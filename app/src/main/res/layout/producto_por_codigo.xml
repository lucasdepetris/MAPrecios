<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/msgErrorUbicacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgErrorVerProductoPorId"
                android:src="@drawable/mapa_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/textMensajeErrorBuscar"
                android:textColor="@color/md_black_1000"
                android:padding="40dp"
                android:textAlignment="center"
                android:text="@string/sinUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnReintentarBuscar"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/my_button_bg"
                android:text="@string/Reintentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:minWidth="120dp"
            android:id="@+id/MejorImgProducto"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/md_black_1000"
            android:layout_toRightOf="@id/MejorImgProducto"
            android:id="@+id/MejorNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/md_black_1000"
            android:text="@string/MejorPrecioTitle"
            android:layout_toRightOf="@id/MejorImgProducto"
            android:layout_below="@id/MejorNombre"
            android:id="@+id/titlePrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/md_black_1000"
            android:textStyle="bold"
            android:layout_below="@id/titlePrecio"
            android:layout_toRightOf="@id/MejorImgProducto"
            android:id="@+id/MejorPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:src="@drawable/btn_agregar_producto"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@id/titlePrecio"
            android:layout_alignParentRight="true"
            android:id="@+id/agregarMejorPrecio"
            android:paddingRight="10dp"
            android:paddingLeft="18dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:src="@drawable/estrella"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_below="@id/titlePrecio"
            android:layout_toLeftOf="@+id/agregarMejorPrecio"
            android:id="@+id/estrellaCabecera"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:clickable="true"
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>