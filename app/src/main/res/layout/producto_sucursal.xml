<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/productoSucursal"
    android:background="@color/white"
    android:paddingBottom="10dp">
    <TextView
        android:textColor="@color/md_black_1000"
        android:id="@+id/distancia"
        android:text=""
        android:fontFamily="@font/quicksand_regular"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/distancia"
        android:id="@+id/imgComercio"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_marginTop="15dp"
        android:textColor="@color/md_black_1000"
        android:textStyle="bold"
        android:layout_below="@id/distancia"
        android:layout_toRightOf="@id/imgComercio"
        android:text=""
        android:id="@+id/nombreComercio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/md_black_1000"
        android:textSize="18dp"
        android:text=""
        android:layout_toRightOf="@id/imgComercio"
        android:layout_below="@id/nombreComercio"
        android:id="@+id/direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/md_black_1000"
        android:text=""
        android:layout_below="@id/direccion"
        android:layout_toRightOf="@id/imgComercio"
        android:id="@+id/localidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/md_black_1000"
        android:textStyle="bold"
        android:text=""
        android:layout_below="@id/localidad"
        android:layout_toRightOf="@id/imgComercio"
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="18dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/btn_agregar_producto"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@id/localidad"
        android:id="@+id/agregar"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/estrella"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@id/localidad"
        android:layout_toLeftOf="@+id/agregar"
        android:id="@+id/estrella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>