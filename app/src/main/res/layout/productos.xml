<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/cont_buscarProductos"
        android:layout_marginBottom="10dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <ImageView
            android:padding="10dp"
            android:id="@+id/imgProducto"
            android:layout_width="120dp"
            android:layout_height="80dp" />
        <TextView
            android:visibility="gone"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgProducto"
            android:id="@+id/precioProducto"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/md_black_1000"
            android:textSize="15dp"
            android:maxWidth="300dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/precioProducto"
            android:layout_toRightOf="@id/imgProducto"
            android:id="@+id/descripcionProducto"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/marcaProducto"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/imgProducto"
            android:layout_below="@+id/descripcionProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/idProducto"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/imgProducto"
            android:layout_below="@+id/marcaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>