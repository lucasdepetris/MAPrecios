<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/gray">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/cont_buscarProductos"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <ImageView
                android:padding="10dp"
                android:id="@+id/imgProducto"
                android:layout_width="120dp"
                android:layout_height="80dp" />

            <TextView
                android:textColor="@color/md_black_1000"
                android:textSize="15dp"
                android:maxWidth="300dp"
                android:paddingLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/imgProducto"
                android:id="@+id/descripcionProducto"
                android:text=""
                android:fontFamily="@font/quicksand_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marcaProducto"
                android:fontFamily="@font/quicksand_regular"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/imgProducto"
                android:layout_below="@+id/descripcionProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/idProducto"
                android:fontFamily="@font/quicksand_regular"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:layout_toRightOf="@id/imgProducto"
                android:layout_below="@+id/marcaProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>