<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/SucursalMiLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="10dp"
            android:id="@+id/imgSucursalDeLista"
            android:layout_width="120dp"
            android:layout_height="80dp" />
        <TextView
            android:textColor="@color/md_black_1000"
            android:padding="5dp"
            android:layout_toEndOf="@+id/imgSucursalDeLista"
            android:layout_toRightOf="@id/imgSucursalDeLista"
            android:id="@+id/nombreSucursal"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/md_black_1000"
            android:padding="5dp"
            android:text=""
            android:layout_below="@+id/nombreSucursal"
            android:layout_toEndOf="@+id/imgSucursalDeLista"
            android:layout_toRightOf="@+id/imgSucursalDeLista"
            android:id="@+id/direccionSucursalDeLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="5dp"
            android:layout_toEndOf="@+id/imgSucursalDeLista"
            android:layout_toRightOf="@+id/imgSucursalDeLista"
            android:layout_below="@+id/direccionSucursalDeLista"
            android:layout_marginTop="5dp"
            android:text=""
            android:id="@+id/TotalPorSupermercadoDeclarado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reciclerProductosDeSucursal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>